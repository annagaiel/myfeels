<div class="col-xs-10 col-xs-offset-1 col-sm-6 col-sm-offset-3">
    <blockquote class="quote-box center-block text-center" style="color:<%= @phrase.foreground%>; background-color:<%= @phrase.background%>; font:<%= @phrase.font%>">
      <div class="quote text-center"><i class="fa fa-quote-left fa-2x"></i></div>
      <p class="quote-text">
      <%= @phrase.phrase %>
      </p>
      <hr style="border-top: solid 1px <%= @phrase.foreground%>;"/>
      <div class="phrase-actions">
        <p class="phrase-bottom pull-left">
          <%= @phrase.author %>
        </p>
      </div>
    </blockquote>
  <div class="center-block text-center">
  <% if @phrase.user == current_user %>
  <%= link_to 'Edit', edit_phrase_path(@phrase), :class => 'btn btn-primary' %>
  <%= link_to 'Delete', phrase_path(@phrase),
            method: :delete,
            data: { confirm: 'Are you sure?' },
              :class => 'btn btn-danger' %>
  <% end %>
  </div>
</div>
