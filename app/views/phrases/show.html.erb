<div class="col-xs-10 col-xs-offset-1">
  <div class="quote"><i class="fa fa-quote-left fa-4x"></i></div>
  <p><%= @phrase.phrase %></p>
  <p><%= @phrase.author %></p>

  <p><%= @phrase.background %></p>
  <p><%= @phrase.foreground %></p>
  <p><%= @phrase.font %></p>

  <% if @phrase.user == current_user %>
  <%= link_to 'Edit', edit_phrase_path(@phrase), :class => 'btn btn-primary' %>
  <%= link_to 'Delete', phrase_path(@phrase),
            method: :delete,
            data: { confirm: 'Are you sure?' },
              :class => 'btn btn-danger' %>
  <% end %>
</div>
