<div class="panel panel-default">
  <div class="panel-body">
    <div class="container col-xs-10 col-xs-offset-1 ">
      <%= simple_form_for @phrase do |f| %>
        <%= f.input :phrase %>
        <%= f.input :author %>
        <%= f.input :background %>
        <%= f.input :foreground %>
        <%= f.input :font %>
        <%= f.input :inspirational_list, input_html: { value: @phrase.inspirationals.map{|v| v.name}.join(",") } %>
        <%= f.input :inspirationals %>
        <br />
        <%= f.submit 'Create', :class => 'btn btn-primary' %>
        <%= button_tag(type: 'button', class: "btn btn-default", id: 'preview-button') do %>
          <i class="fa fa-arrow-circle-down"></i> Preview
        <% end %>
      <% end %>
      <section id="preview-section" class="col-xs-10 col-xs-offset-1 col-sm-6 col-sm-offset-3">
      <blockquote class="quote-box center-block text-center">
        <div class="quote text-center"><i class="fa fa-quote-left fa-2x"></i></div>
        <p class="quote-text">
          Your very own Phrase.
        </p>
        <hr />
        <div class="phrase-actions">
          <p class="phrase-bottom pull-left">
            Author
          </p>
        </div>
      </blockquote>
      </section>
    </div>
  </div>
</div>
