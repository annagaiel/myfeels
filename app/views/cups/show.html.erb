<div class="col-xs-10 col-xs-offset-1">

<h1>Your Cup</h1>
<p>You mostly feel ...</p>

<div class="box">

<ul class="list-group center-block text-center">
  <% @emotions.each do |emotion| %>
    <li class="list-group-item"><%= emotion.name.upcase %></li>
  <% end %>
</ul>

</div>
<br />

<div class="center-block text-center">
<%= link_to 'Add Emotion', emotions_path, :class => 'btn btn-primary' %>
<%= link_to 'Clear Cup', clear_all_cup_path, method: :delete, :class => 'btn btn-default' %>
</div>

</div>
